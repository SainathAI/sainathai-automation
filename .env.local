# .env.local - Local environment variables for the AI Social Media Content Factory

# OpenAI API Key for content and image generation
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# ImgBB API Key for hosting generated images
IMGBB_API_KEY=YOUR_IMGBB_API_KEY

# n8n Encryption Key for securing credentials
# You can generate a strong, random key with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=CHANGEME_IN_PRODUCTION

# Forces n8n to use very little memory
NODE_OPTIONS=--max-old-space-size=512
# Don't save successful execution data in the database
EXECUTIONS_DATA_SAVE_ON_SUCCESS=none
# Delete old data every hour
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=1
