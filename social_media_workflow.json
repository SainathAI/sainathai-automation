        "sheetName": "PRIORITY_QUEUE",
        "filters": {
          "conditions": [
            {
              "field": {
                "jsonPath": "STATUS"
              },
              "operation": "equals",
              "value": "PENDING"
            }
          ]
        },
        "options": {
          "limit": 1
        }
      },
      "name": "2. Read Priority Queue",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 3,
      "position": [
        690,
        300
      ],
      "credentials": {
        "googleSheetsOAuth2Api": {
          "id": "REPLACE-WITH-YOUR-GOOGLE-SHEETS-CREDENTIAL-ID",
          "name": "Google Sheets account"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "boolean": [
            {
              "value1": "={{ $items().length > 0 }}",
              "operation": "true"
            }
          ]
        }
      },
      "name": "3. Priority Task Exists?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [
        910,
        300
      ]
    },
    {
      "parameters": {
        "values": {
          "string": [
            {
              "name": "topic",
              "value": "={{$node[\"2. Read Priority Queue\"].json[\"TOPIC_TITLE\"]}}"
